{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "sourceMap": true,
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "strict": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "rootDir": ".",
    "paths": {
      "/@/*": ["./src/*"]
    },
    "types": ["node", "jest"],
    "typeRoots": ["node_modules/@types"],
    "lib": ["ESNext"]
  }
}
